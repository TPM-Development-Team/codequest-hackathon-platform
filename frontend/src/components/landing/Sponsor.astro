---
import { Image } from "astro:assets";
import companies from "../../assets/companies.png";
---

<div class="sponsor-container" id="sponsor">
  <h1>Sponsors and Partners</h1>
  <Image src={companies} alt="sponsor" />
</div>

<style>
  .sponsor-container {
    position: absolute;
    top: 67.9%;
    width: 100%;
    height: 65vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background-color: rgb(255, 255, 255, 0.3);
  }

  .sponsor-container h1 {
    font-family: "Pixelify Sans", sans-serif;
    font-size: 4rem;
    margin: 0;
    margin-bottom: 5vh;
    color: white;
    text-decoration: none;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.9);
  }

  @media (max-width: 768px) {
    .sponsor-container {
      position: relative;
      top: 0;
      height: auto;
      padding: 4rem 0;
      margin-top: 2rem;
    }
    
    .sponsor-container h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }

    /* Make image responsive */
    .sponsor-container img {
      width: 90%;
      height: auto;
      object-fit: contain;
    }
  }
</style>

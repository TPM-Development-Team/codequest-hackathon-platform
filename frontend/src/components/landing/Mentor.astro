---
import { Image } from "astro:assets";
import gallery_wall from "../../assets/gallery_wall.png";

const { mentors: propsMentors } = Astro.props;
let backendMentors = propsMentors || [];

if (backendMentors.length === 0) {
  try {
    const response = await fetch("http://localhost:5001/api/content");
    if (response.ok) {
      const data = await response.json();
      backendMentors = data.mentors || [];
    }
  } catch (error) {
    console.error("Error fetching Mentors content:", error);
  }
}

const positions = [
  { top: "40%", left: "0%", width: "13%", height: "25%" },
  { top: "18%", left: "15%", width: "10%", height: "32%" },
  { top: "58%", left: "15%", width: "10%", height: "32%" },
  { top: "70%", left: "29%", width: "12%", height: "30%" },
  { top: "0%", left: "43%", width: "12%", height: "30%" },
  { top: "70%", left: "59%", width: "12%", height: "30%" },
  { top: "15%", left: "75%", width: "10%", height: "32%" },
  { top: "55%", left: "75%", width: "10%", height: "32%" },
  { top: "32%", left: "87%", width: "13%", height: "30%" },
  { top: "13%", left: "29%", width: "12%", height: "55%" },
  { top: "35%", left: "44%", width: "12%", height: "55%" },
  { top: "13%", left: "59%", width: "11%", height: "55%" },
];

const mentors = backendMentors.map((m, i) => ({
  ...m,
  position: positions[i] || { top: "0%", left: "0%", width: "0%", height: "0%" }
}));
---

<div class="gallery-container" id="mentors">
  <h1>Mentors and Jury</h1>

  <div class="image-wrapper">
    <Image
      src={gallery_wall}
      alt="Gallery Wall"
      class="gallery-image"
      width={700}
    />

    {
      mentors.map((mentor) => (
        <div
          class="hotspot"
          style={`
            top: ${mentor.position.top}; 
            left: ${mentor.position.left}; 
            width: ${mentor.position.width};
            height: ${mentor.position.height};
          `}
        >
          <div class="mentor-info">
            <h3>{mentor.name}</h3>
            <p>{mentor.title}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .gallery-container {
    position: absolute;
    top: 39%;
    width: 100%;
    height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .gallery-container h1 {
    font-family: "Pixelify Sans", sans-serif;
    font-size: 4rem;
    margin: 0;
    color: #f7d028;
    margin-bottom: 12vh;
  }

  .image-wrapper {
    position: relative;
    display: inline-block;
  }

  .gallery-image {
    display: block;
    width: 700px;
    height: auto;
  }

  .hotspot {
    position: absolute;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .hotspot:hover {
    filter: drop-shadow(0 0 20px rgba(255, 215, 0, 1))
      drop-shadow(0 0 40px rgba(255, 215, 0, 0.9))
      drop-shadow(0 0 60px rgba(255, 215, 0, 0.7));
    transform: scale(1.05);
    z-index: 100;
  }

  .mentor-info {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.9);
    font-family: "Pixelify Sans", sans-serif;
    opacity: 0;
    transition: opacity 0.3s;
    pointer-events: none;
    white-space: nowrap;
  }

  .hotspot:hover .mentor-info {
    opacity: 1;
  }

  .mentor-info h3 {
    margin: 0 0 5px 0;
    font-size: 1.2rem;
  }

  .mentor-info p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .gallery-container {
      position: relative;
      top: 0;
      height: auto;
      padding: 4rem 0;
      margin-bottom: 2rem;
    }

    .gallery-container h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }

    /* Hide the wall image on mobile to simplify layout */
    .gallery-image {
      display: none;
    }

    .image-wrapper {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        width: 80%;
    }

    .hotspot {
      position: relative !important;
      top: auto !important;
      left: auto !important;
      width: 100% !important;
      height: auto !important;
      background: rgba(0, 0, 0, 0.7);
      border: 3px solid #f7d028;
      border-radius: 12px;
      padding: 1.5rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      box-shadow: 0 4px 10px rgba(0,0,0,0.5);
    }

    .mentor-info {
        position: relative;
        opacity: 1;
        pointer-events: auto;
        white-space: normal;
    }
    
    .mentor-info h3 {
        font-size: 1.4rem;
        margin-bottom: 0.5rem;
        line-height: 1.2;
    }

    .mentor-info p {
        font-size: 0.9rem;
        color: #ddd;
    }
  }
</style>

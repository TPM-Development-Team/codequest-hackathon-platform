---
const { prizes: propsPrizes } = Astro.props;
let backendPrizes = propsPrizes || [];

if (backendPrizes.length === 0) {
  try {
    const response = await fetch("http://localhost:5001/api/content");
    if (response.ok) {
      const data = await response.json();
      backendPrizes = data.prizes || [];
    }
  } catch (error) {
    console.error("Error fetching Prizes content:", error);
  }
}

const positions = [
  { top: "13%", left: "39%", width: "25%", height: "55%" },
  { top: "20%", left: "7%", width: "25%", height: "55%" },
  { top: "20%", left: "72%", width: "25%", height: "55%" },
];

const prizes = backendPrizes.map((p, i) => ({
  rank: p.rank,
  prize: p.reward,
  position: positions[i] || { top: "0%", left: "0%", width: "0%", height: "0%" }
}));
---

<div class="prize-container" id="prize">
  <h1>Prize</h1>

  <div class="image-wrapper">
    {
      prizes.map((prize) => (
        <div
          class="hotspot"
          style={`
            top: ${prize.position.top}; 
            left: ${prize.position.left}; 
            width: ${prize.position.width};
            height: ${prize.position.height};
          `}
        >
          <div class="prize-info">
            <h3>{prize.rank}</h3>
            <p>{prize.prize}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .prize-container {
    position: absolute;
    top: 46%;
    width: 100%;
    height: 66vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .prize-container h1 {
    font-family: "Pixelify Sans", sans-serif;
    font-size: 4rem;
    margin: 0;
    color: #f7d028;
    margin-bottom: 10vh;
  }

  .image-wrapper {
    position: relative;
    display: inline-block;
    height: 40vh;
    width: 30vw;
  }

  .hotspot {
    position: absolute;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .hotspot:hover {
    filter: drop-shadow(0 0 20px rgba(255, 215, 0, 1))
      drop-shadow(0 0 40px rgba(255, 215, 0, 0.9))
      drop-shadow(0 0 60px rgba(255, 215, 0, 0.7));
    transform: scale(1.05);
    z-index: 100;
  }

  .prize-info {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.9);
    font-family: "Pixelify Sans", sans-serif;
    white-space: nowrap;
  }

  .prize-info h3 {
    margin: 0 0 2px 0;
    font-size: 2rem;
  }

  .prize-info p {
    margin: 0;
    font-size: 1.4rem;
    opacity: 0;
    transition: opacity 0.3s;
    pointer-events: none;
  }

  .hotspot:hover .prize-info p {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .prize-container {
      position: relative;
      top: 0;
      height: auto;
      padding: 4rem 0;
      margin-bottom: 2rem;
    }
    
    .prize-container h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      margin-top: 10rem; /* Space from previous section */
    }

    .image-wrapper {
      width: 100%;
      height: auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .hotspot {
      position: relative !important;
      top: auto !important;
      left: auto !important;
      width: 80% !important;
      height: 150px !important; /* Smaller height for cards */
      border: 4px solid #f7d028; /* Add border to mimic frame */
      border-radius: 10px;
      background: rgba(0,0,0,0.5); /* Background for readability */
    }
    
    .prize-info {
        position: relative;
        height: 100%;
    }

    .prize-info h3 {
        font-size: 1.5rem;
    }

    .prize-info p {
      opacity: 1; /* Always show prize on mobile */
      font-size: 1.1rem;
    }
  }
</style>

---
const { timelines } = Astro.props;
let backendTimeline = timelines || [];

if (backendTimeline.length === 0) {
  try {
    const response = await fetch("http://localhost:5001/api/content");
    if (response.ok) {
      const data = await response.json();
      backendTimeline = data.timelines || [];
    }
  } catch (error) {
    console.error("Error fetching Timeline content:", error);
  }
}

const positions = [
  { top: "37%", left: "0.5%", width: "18%", height: "55%" },
  { top: "37%", left: "20%", width: "18%", height: "55%" },
  { top: "37%", left: "40%", width: "18%", height: "55%" },
  { top: "37%", left: "60.5%", width: "18%", height: "55%" },
  { top: "37%", left: "81.5%", width: "18%", height: "55%" },
];

const timeline = backendTimeline.map((t, i) => ({
  ...t,
  position: positions[i] || { top: "0%", left: "0%", width: "0%", height: "0%" }
}));
---

<div class="timeline-container" id="timeline">
  <h1>Timeline</h1>

  <div class="image-wrapper">
    {
      timeline.map((prize) => (
        <div
          class="hotspot"
          style={`
            top: ${prize.position.top}; 
            left: ${prize.position.left}; 
            width: ${prize.position.width};
            height: ${prize.position.height};
          `}
        >
          <div class="prize-info">
            <h3>{prize.event}</h3>
            <p>{prize.date}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .timeline-container {
    position: absolute;
    top: 52.4%;
    width: 100%;
    height: 60vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .timeline-container h1 {
    font-family: "Pixelify Sans", sans-serif;
    font-size: 4rem;
    margin: 0;
    color: #f7d028;
    margin-bottom: 14vh;
  }

  .image-wrapper {
    position: relative;
    display: inline-block;
    height: 25vh;
    width: 55vw;
  }

  .hotspot {
    position: absolute;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .hotspot:hover {
    filter: drop-shadow(0 0 20px rgba(255, 215, 0, 1))
      drop-shadow(0 0 40px rgba(255, 215, 0, 0.9))
      drop-shadow(0 0 60px rgba(255, 215, 0, 0.7));
    transform: scale(1.05);
    z-index: 100;
  }

  .prize-info {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.9);
    font-family: "Pixelify Sans", sans-serif;
    text-align: center;
  }

  .prize-info h3 {
    margin: 0 0 2px 0;
    font-size: 1.2rem;
  }

  .prize-info p {
    margin: 0;
    font-size: 1rem;
    opacity: 0;
    transition: opacity 0.3s;
    pointer-events: none;
    white-space: nowrap;
  }

  .hotspot:hover .prize-info p {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .timeline-container {
      position: relative;
      top: 0;
      height: auto;
      padding: 4rem 0;
      margin-bottom: 2rem;
    }

    .timeline-container h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }

    .image-wrapper {
      width: 100%;
      height: auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }

    .hotspot {
      position: relative !important;
      top: auto !important;
      left: auto !important;
      width: 80% !important;
      height: 80px !important;
      background: rgba(0, 0, 0, 0.6);
      border: 2px solid #f7d028;
      border-radius: 8px;
    }

    .prize-info {
        justify-content: center;
    }

    .prize-info h3 {
        font-size: 1.2rem;
    }

    .prize-info p {
        opacity: 1;
        font-size: 1rem;
        white-space: normal;
    }
  }
</style>

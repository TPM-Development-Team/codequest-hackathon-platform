---
import { Image } from "astro:assets";
import instagram from "../../assets/instagram.png";
import twitter from "../../assets/twitter.png";
import gmail from "../../assets/gmail.png";
import linkedin from "../../assets/linkedin.png";

const { socials: propsSocials } = Astro.props;
let backendSocials = propsSocials || [];

if (backendSocials.length === 0) {
  try {
    const response = await fetch("http://localhost:5001/api/content");
    if (response.ok) {
      const data = await response.json();
      backendSocials = data.socials || [];
    }
  } catch (error) {
    console.error("Error fetching Social content:", error);
  }
}

const iconMap = {
  instagram,
  twitter,
  gmail,
  linkedin,
};

const positions = [
  { top: "30%", left: "20%" },
  { top: "30%", left: "50%" },
  { top: "75%", left: "10%" },
  { top: "85%", left: "30%" },
  { top: "75%", left: "75%" },
];

const socials = backendSocials.map((s, i) => ({
  ...s,
  src: iconMap[s.name.toLowerCase()] || instagram,
  position: positions[i] || { top: "0%", left: "0%" }
}));
---

<div class="social-container" id="social">
  <h1>Social Media</h1>

  <div class="image-wrapper">
    {
      socials.map((social) => (
        <a
          href={social.url}
          target="_blank"
          rel="noopener noreferrer"
          class="social-item"
          style={`top: ${social.position.top}; left: ${social.position.left};`}
        >
          <Image src={social.src} alt="social" height={40} />
          <h3>{social.account}</h3>
        </a>
      ))
    }
  </div>
</div>

<style>
  .social-container {
    position: absolute;
    top: 74.5%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .social-container h1 {
    font-family: "Pixelify Sans", sans-serif;
    font-size: 4rem;
    margin: 0;
    color: white;
    text-decoration: none;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.9);
  }

  .image-wrapper {
    position: relative;
    height: 55vh;
    width: 55vw;
  }

  .social-item {
    position: absolute;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
    text-decoration: none;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.9);
    font-family: "Pixelify Sans", sans-serif;
    white-space: nowrap;
    cursor: pointer;
  }

  .social-item:hover {
    transform: scale(1.1);
  }

  .social-item h3 {
    margin: 0;
    font-size: 1.1rem;
  }
</style>
